<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
			<h1><%= user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) +
			        " " +
			        user.lastName.charAt(0).toUpperCase() + user.lastName.slice(1) %>
			</h1>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">
			<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
		
		<h5>Bio:</h5>
        <p><%= user.bio %></p>
        
	</div>
	<div class="col-md-8">
	    
	    <h4>Campgrounds posted by <%= user.username %></h4>
              <% if(campgrounds.length < 1) { %>
                  <h6 class="mt-4 ml-2"><em>No campgrounds submitted yet...</em></h6> 
             <% } else { %>
                 <ul>
                  <% campgrounds.forEach( campground => { %>
                      <li>
                       <p class="user-campground-list"><a href="../campgrounds/<%= campground.id %>"><%= campground.name %></a></p>
                      </li>
                 <% }); %>
                 </ul>
            <% } %>
	</div>
</div>

<% include ../partials/footer %>